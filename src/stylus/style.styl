@import 'nib'

.nav-drawer
  absolute top bottom left
  background #191918

.nav-drawer .nav li
  display block
  a
    color #bbbbb8
    &:hover
      color white
      background transparent

#page
  background: white
  overflow: auto

.nav-toggle
#page
  transition: transform .4s ease, opacity .4s ease
  transform: translate3d(0,0,0)

.nav-toggle
  absolute top left
  top 20px
  left 20px
  z-index 1

.nav-drawer .nav li
  display block

#page-overlay
#page
  width 100%
  height 100%
  fixed top left
#page-overlay
  display none
  z-index 1

.nav-drawer nav
  width 280px

.open-nav
  #page-overlay
    left 280px
    display block
  .nav-toggle
    opacity 0
  .nav-toggle
  #page
    transform: translate3d(280px,0,0)