extends views/layout

block content
	.jumbotron
		h1#out ZombieHippie
		p#output the all media collection
	.container
		.row.page-header
			h1=title
		if tableOfContents
			.row
				.col-sm-3
					ol.nav
						each heading in tableOfContents
							-var linkTo = "#" + heading.replace(/ /g, '-')
							li
								a(href=linkTo)=heading
				.col-sm-9!=content
		else
			.row!=content