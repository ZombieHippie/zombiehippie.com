extends views/layout

block content
	.container
		h1 Write new post
		form(role="form",method="POST")
			.form-group
				.row
					.col-sm-8.col-xs-12
						textarea.form-control(rows="5",name="description",placeholder="description")
					.col-sm-4.col-xs-12
						input.form-control(name="title",type="text",placeholder="title")
						input.form-control(name="slug",type="text",placeholder="slug")
						input.form-control(type="Submit",text="Submit")
				.row
					textarea.CodeMirror(name="md-content")
block footer
	script.
		window.editor = CodeMirror.fromTextArea($(".CodeMirror[name=md-content]")[0], {
				styleSelectedText: true,
				showCursorWhenSelecting: true,
				styleActiveLine: true,
				theme: "xq-light",
				indentWithTabs: true,
				indentUnit: 4,
				lineWrapping: true,
				lineNumbers: true,
				// keyMap: "sublime",
				mode: "markdown"
			});