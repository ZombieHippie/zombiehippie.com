doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/css/vendors.css')
		link(rel='stylesheet', href='/css/style.css')
		meta(name="viewport", content="width=device-width, initial-scale=1")
		include metatags
		block head
	body
		.nav-drawer
			button.nav-toggle Navigation
			nav
				ul.nav
					each v, k in nav
						li
							a(href=v)=k
					if user
						li
							a
								strong='@'+user.name
						li
							a(href="/write")="Write"
						li
							a(href="/logout")="Logout"
		#page-overlay
		#page
			block content
	footer
		script(src='/js/vendors.js')
		script(src='/js/script.js')
		script(defer,src='//localhost:9999/devreload.js')
		block footer